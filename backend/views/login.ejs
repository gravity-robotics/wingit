<%- include("header") %>

<link rel="stylesheet" href="css/style_login.css">
<title>Restaurant Login</title>
  </head>
  <body>
   
<div class="sidenav">
   <a href="/">
      <img class="back" src="images/icons/back-white.png">
   </a>
    <div class="login-main-text">
       <h2 class="wingit">Wingit</h2>
       <h2>Restaurant Login</h2>
       <p>Login or Sign Up to create or edit your menu.</p>
    </div>
 </div>
 
 <div class="main">
    <div class="col-md-6 col-sm-12">
       <div class="login-form">
          <form action="/login" method="post">

             <div class="form-group">
                <label>Email ID</label>
                <input type="email" name="email" class="form-control" placeholder="Email ID" required>
             </div>

             <div class="form-group">
                <label>Password</label>
                <input type="password" name="password" class="form-control" placeholder="Password" minlength="8" required>
             </div>

             <br>

             <button type="submit" class="btn btn-black login">Login</button>
             
             <a href="/signup" class="btn btn-black register">Sign  Up</a>
          </form>
       </div>
    </div>
 </div>

<%- include("footer") %> 